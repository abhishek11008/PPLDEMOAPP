<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressbarStyle">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="chckBox">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IsEnabled">
        <item name="isEnabled">#000</item>
    </style>

    <style name="IsDisabled">
        <item name="isDisabled">#696969</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">#696969</item>
        <item name="android:textColorHint">#696969</item>
        <item name="colorControlNormal">#696969</item>
        <item name="colorControlActivated">#696969</item>
        <item name="colorControlHighlight">#696969</item>
    </style>

    <style name="DefaultScene">
        <item name="isEnabled">#696969</item>
        <item name="isDisabled">#696969</item>
    </style>

</resources>
